#: kivy 1.9.1
<CharacterScreen>:
    name: "char"
    FloatLayout:
        Image:
            source: "images/background.jpg"
            keep_ratio: False
            allow_stretch: True
        BoxLayout:
            orientation: "vertical"
            spacing: 15
            pos_hint: {'center_x': .25, 'center_y': .5}
            size_hint: (.5, .5)
            Button:
                id: new_button
                text: "New"
                size_hint: (.30, .15)
            Button:
                id: save_button
                text: "Save"
                size_hint: (.30, .15)
            Button:
                id: load_button
                text: "Load"
                size_hint: (.30, .15)
            Button:
                id: join_button
                text: "Join"
                size_hint: (.30, .15)
        BoxLayout:
            orientation: "vertical"
            spacing: 20
            pos_hint: {'center_x': .35, 'center_y': .85}
            size_hint: (.5, .22)
            Label:
                id: name_label
                text: "Name"
                font_size: 24
            Label:
                id: class_label
                text: "Class"
                font_size: 24
            Label:
                id: hp_label
                text: "HP"
                font_size: 24
        BoxLayout:
            orientation: "vertical"
            spacing: 20
            pos_hint: {'center_x': .9, 'center_y': .85}
            size_hint: (.5, .22)
            TextInput:
                id: name_textinput
                hint_text: "Enter name"
                size_hint: (.6, .15)
            TextInput:
                id: class_textinput
                hint_text: "Enter class"
                size_hint: (.6, .15)
            TextInput:
                id: hp_textinput
                hint_text: "Enter hp"
                size_hint: (.6, .15)
        Button:
            id: back_btn
            text: "back"
            size_hint: (.10, .05)
            pos_hint: {'center_x': .95, 'bottom_y': .025}
            on_release: root.manager.current = 'home'            
