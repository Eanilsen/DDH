#: kivy 1.9.1

<CharacterScreen>:
    name: "char"
    FloatLayout:
        Image:
            source: "images/background.jpg"
            keep_ratio: False
            allow_stretch: True
        BoxLayout:
            orientation: "vertical"
            spacing: 15
            pos_hint: {'center_x': .25, 'center_y': .5}
            size_hint: (.5, .5)
            Button:
                text: "New"
                size_hint: (.30, .15)
            Button:
                text: "Load Character"
                size_hint: (.30, .15)
            Button:
                text: "Save"
                size_hint: (.30, .15)
            Button:
                text: "Load"
                size_hint: (.30, .15)
            Button:
                text: "Join"
                size_hint: (.30, .15)
        BoxLayout:
            orientation: "vertical"
            spacing: 20
            pos_hint: {'center_x': .5, 'center_y': .85}
            size_hint: (.5, .20)
            Label:
                text: "Name"
                font_size: 24
                size_hint: (.3, .1)
            Label:
                text: "Class"
                font_size: 24
                size_hint: (.3, .1)
            Label:
                text: "HP"
                font_size: 24
                size_hint: (.3, .1)
        BoxLayout:
            orientation: "vertical"
            spacing: 20
            pos_hint: {'center_x': .9, 'center_y': .85}
            size_hint: (.5, .22)
            TextInput:
                hint_text: "Enter name"
                size_hint: (.6, .15)
            TextInput:
                hint_text: "Enter class"
                size_hint: (.6, .15)
            TextInput:
                hint_text: "Enter hp"
                size_hint: (.6, .15)            
        
            
            
