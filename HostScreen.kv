#: kivy 1.9.1
#: import TextInput kivy.uix.textinput

<HostScreen>
    name: "host"

    Image:
        source: 'background.jpg'
        keep_ratio: False
        allow_stretch: True

    BoxLayout:
        orientation: 'vertical'
        size_hint: (.5, .35)
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: 5

        canvas:
            Color:
                Rectangle:
                    rgba: 0, 0, 0, .5
                    pos: self.pos
                    size: self.size + 50

        Label:
            text: "Server settings"
            font_size: '30sp'
            size_hint: (.25, .10)
            pos_hint: {'center_x': .5, 'center_y': .70}

        # Name of the game that is being hosted.
        TextInput:
            id: server_name
            hint_text: 'Server Name'
            focus: False
            text: ''
            size_hint: (1, .15)
            multiline: False

        # The amount of players that can join the game
        TextInput:
            hint_text: 'Number of Maximum Players'
            focus: False
            text: ''
            input_filter: 'int'
            size_hint: (1, .15)

        Button:
            id: btnStart
            text: 'Start Game'
            size_hint: (.25, .09)
            pos_hint: {'center_x': .90, 'bottom_y': .025}

            # TODO server_name.text is the text inside the TextInput box Server name, use this as game name
            on_press: root.printTextToConsole(server_name.text)
            on_release: root.manager.current = 'game'

    Button:
        id: btnQuit
        text: 'Back'
        size_hint: (.10, .05)
        pos_hint: {'center_x': .95, 'bottom_y': .025}
        on_press: root.manager.current = "home"




